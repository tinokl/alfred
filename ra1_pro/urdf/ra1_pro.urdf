<?xml version="1.0"?>
<robot name="alfred">
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.27 .25 .065"/>
      </geometry>
      <origin xyz="0 0 0.0325"/>
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>
    </visual>
  </link>

  <link name="cylinder">
    <visual>
      <geometry>
        <cylinder length="0.035" radius="0.085"/>
      </geometry>
      <origin xyz="0 0 0.0175"/>
            <material name="red">
        <color rgba=".8 0 0 1"/>
      </material>
    </visual>
  </link>

  <link name="base_s6">
    <visual>
      <geometry>
        <box size="0.06 .04 .035"/>
      </geometry>
      <origin xyz="-0.015 0 0.0175"/>
      <material name="blue"/>
    </visual>
  </link>

  <link name="shoulder_s5">
    <visual>
      <geometry>
        <box size="0.025 .06 .105"/>
      </geometry>
      <origin xyz="0 0 0.0395"/>
      <material name="red"/>
    </visual>
  </link>

  <link name="elbow_s4">
    <visual>
      <geometry>
        <box size="0.03 .04 .12"/>
      </geometry>
      <origin xyz="0 0 0.040"/>
      <material name="blue"/>
    </visual>
  </link>

  <link name="wrist_s3">
    <visual>
      <geometry>
        <box size="0.025 .06 .07"/>
      </geometry>
      <origin xyz="0 0 0.025"/>
      <material name="red"/>
    </visual>
  </link>

  <joint name="box_to_cylinder" type="fixed">
    <parent link="base_link"/>
    <child link="cylinder"/>
    <origin xyz="0 0 0.06"/>
  </joint>

  <joint name="cylinder_to_base_s6" type="continuous">
    <parent link="cylinder"/>
    <child link="base_s6"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0.055"/>
  </joint>

  <joint name="base_s6_to_shoulder_s5" type="continuous">
    <parent link="base_s6"/>
    <child link="shoulder_s5"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 0.015"/>
  </joint>

  <joint name="shoulder_s5_to_elbow_s4" type="continuous">
    <parent link="shoulder_s5"/>
    <child link="elbow_s4"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 0.08"/>
  </joint>

  <joint name="elbow_s4_to_wrist_s3" type="continuous">
    <parent link="elbow_s4"/>
    <child link="wrist_s3"/>
    <axis xyz="0 1 0"/>
    <origin xyz="0 0 0.08"/>
  </joint>

</robot>
